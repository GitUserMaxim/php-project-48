{
    "name": "hexlet/code",
    "description": "A utility for comparing configuration files in various formats (YAML, JSON) and generating difference reports.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ]
    },
    "authors": [
        {
            "name": "Maxim Raychuk",
            "email": "raychukmaxim@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^2.1"
    }
}
